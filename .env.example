# Groq API Configuration (replaces local Ollama)
GROQ_API_KEY="your_groq_api_key_here"  # Get from https://console.groq.com
GROQ_MODEL="llama-3.1-70b-versatile"   # Default model for text tasks

# Voyage AI Configuration (replaces HuggingFace local embeddings)
VOYAGE_API_KEY="your_voyage_api_key_here"  # Get from https://www.voyageai.com

# AssemblyAI Configuration (replaces local Vosk speech recognition)
ASSEMBLYAI_API_KEY="your_assemblyai_api_key_here"  # Get from https://www.assemblyai.com

# LLM Configuration
LLM_TEMPERATURE="0.3"              # Lower = more consistent
LLM_MAX_TOKENS="2048"              # Max response length

